{
  "manifest_version": 3,
  "name": "ChatGPT Collapsible Turns",
  "version": "1.2.0",
  "description": "Wrap ChatGPT turns (user/assistant) in collapsible sections.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
